/*首页导航*/
page{
    color:#666;
    padding: 10rpx;
}
.nav_wrap{
    padding: 10rpx;
}
.nav{
    white-space: nowrap;    /* 强制不换行 */
    padding: 5rpx 0;
}
.nav_item{
    padding: 20rpx 45rpx;
    font-size: 30rpx;
    display: inline-block;  /* 不独占一行的块级元素 类似于浮动 */
}
.nav_item.active{
    border-bottom: 5rpx solid #de688d;
}
/*轮播图*/
.slides{
    padding: 0 10rpx 10rpx 10rpx;
}
.slides swiper{
    height: 300rpx;
}
.slides navigator{
    width: 100%;
    height: 100%;
}
.slides image{
    width: 100%;
    height: 100%;
}
/*视频列表*/
.video_wrap{
    padding: 10rpx;
    display: flex;      /* 弹性盒元素 */
    flex-wrap: wrap;    /* 弹性盒元素在必要时换行 */
    justify-content: space-between;     /* 两端对齐 */
}
.video_item{
    width: 49%;
    margin-bottom: 20rpx;
}
.video_img{
    position: relative;
}
.video_img image{
    width: 100%;
    border-radius: 15rpx;
}
.video_img .video_info{
    position: absolute;
    bottom: 15rpx;
    left: 15%;
    width: 70%;
    display: flex;
    justify-content: space-around;      /* 在弹性盒元素中的各项周围留有空白 */
    color: white;
    font-size: 24rpx;
}
.video_title{
    font-size: 28rpx;
    display: -webkit-box;
    overflow: hidden;
    white-space: normal;
    text-overflow: ellipsis;  /* 超出显示... */
    word-wrap: break-word;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}